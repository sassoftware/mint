#!/bin/bash -e
cd `dirname $0`
if [ $EUID -ne 0 ]; then
    echo This script must be run as root.
    exit 1
fi
. /etc/sysconfig/pgsql/postgresql-rbuilder
export PGDATA PGPORT
superopt="--user=postgres"
pgbopt="--no-psqlrc --quiet --user=pgbouncer --port=6432"

if [ -f /var/lock/subsys/rmake-node ]
then
    node_stopped=1
    /sbin/service rmake-node stop
fi
if [ -f /var/lock/subsys/rmake ]
then
    rmake_stopped=1
    /sbin/service rmake stop
fi

# "service rmake reset" doesn't clean up postgres yet
# NOTE: psql 9.x and pgbouncer don't get along, use 8.2
/opt/postgresql-8.2/bin/psql $pgbopt -c 'kill rmake2'
dropdb $superopt rmake2 #&>/dev/null ||:
createdb $superopt --encoding=UTF8 --owner=rmake rmake2
/opt/postgresql-8.2/bin/psql $pgbopt -c 'resume rmake2'

./deleteproject --force rmake-repository \
    || echo "Warning: failed to delete project rmake-repository"
/usr/sbin/rmake-server reset \
    || echo "Warning: failed to delete rMake database"
sudo -u apache ./rmake-setup

[ -n "$rmake_stopped" ] && /sbin/service rmake start
[ -n "$node_stopped" ] && /sbin/service rmake-node start
/sbin/service httpd reload
exit 0
