#!/bin/sh
set -x
function carp {
    nail -s 'Mint Snapshot Build Failed' rbuilder-list@lambchop.rdu.rpath.com << EOT
The rBuilder appliance build failed:

$(cat /tmp/rmake.log)
EOT
exit
}

/srv/rbuilder/code/mint/scripts/devscripts/rmake-helper --trove rbuilder --context rba-nightly --commit >& /tmp/rmake.log

if [ $? != 0 ]; then carp; fi
