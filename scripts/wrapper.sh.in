REPOS_CONARY_PATH=@SITEPKG@/reposconary
export PYTHONPATH=$REPOS_CONARY_PATH

CMD=$(basename $0)
if [ $CMD == "wrapper.sh" ]; then
    echo "Not wrapping self; exiting"
    exit 1
fi

exec @LIBEXECDIR@/rbuilder/$CMD $*
