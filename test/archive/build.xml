<buildDefinition version="1.0">
    <build type="default">
        <!-- these defaults apply to *all* builds, even if
             a particular default doesn't apply to a specific
             build type. If the default isn't specified, the
             default in the code is taken. -->
        <buildValue name="swapSize">128</buildValue>
        <buildValue name="autoResolve">1</buildValue>
        <troveName>group-dist</troveName>

        <name>My Test Appliance</name> <!-- defaults to project name, like it does now -->
        <description>This is a description of my appliance.</description>

        <!-- the tags inside buildType can be extended to include other pieces of information,
             such as definitions of multiple virtual disks, etc. -->
    </build>

    <build type="installable_iso">
        <!-- for some reason we want autoResolve to be turned off for ISOs -->
        <buildValue name="autoResolve">0</buildValue>
        <baseFlavor>is: x86</baseFlavor>
    </build>

    <build type="tarball">
        <buildValue name="swapSize">0</buildValue>
        <baseFlavor>is: x86</baseFlavor>
    </build>

    <!-- this is a Xen build -->
    <build type="raw_fs_image">
        <baseFlavor>xen,domU is: x86</baseFlavor>
        <buildValue name="swapSize">0</buildValue>
    </build>

    <!-- and an x86_64 Xen domU -->
    <build type="raw_fs_image">
        <baseFlavor>xen,domU is: x86</baseFlavor>
        <buildValue name="swapSize">0</buildValue>
    </build>

    <!-- this is a livecd. note that for whatever reason, it uses a
         different group trove. -->
    <build type="live_iso">
        <troveName>group-livecd</troveName>
        <name>My Test LiveCD</name> <!-- override specified name -->
    </build>
</buildDefinition>
