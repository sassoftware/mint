<?xml version="1.0"?>
<descriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.rpath.com/permanent/descriptor-1.0.xsd" xsi:schemaLocation="http://www.rpath.com/permanent/descriptor-1.0.xsd descriptor-1.0.xsd">
  <metadata>
    <displayName>Metadata Descriptor</displayName>
    <rootElement>descriptor_data</rootElement>
    <descriptions/>
  </metadata>
  <dataFields>
    <field>
      <name>metadata.owner</name>
      <descriptions>
        <desc>Owner</desc>
      </descriptions>
      <help lang="en_US" href="@Help_import_image_owner@"/>
      <type>str</type>
      <default/>
      <required>true</required>
      <readonly>true</readonly>
    </field>
    <field>
      <name>metadata.admin</name>
      <descriptions>
        <desc>Admin</desc>
      </descriptions>
      <help lang="en_US" href="@Help_import_image_admin@"/>
      <type>str</type>
      <default/>
      <required>true</required>
      <readonly>true</readonly>
    </field>
    <field>
      <name>metadata.location</name>
      <descriptions>
        <desc>Location</desc>
      </descriptions>
      <help lang="en_US" href="@Help_import_image_location@"/>
      <enumeratedType>
        <describedValue>
          <descriptions>
            <desc>Internal</desc>
          </descriptions>
          <key>internal</key>
        </describedValue>
        <describedValue>
          <descriptions>
            <desc>DMZ</desc>
          </descriptions>
          <key>dmz</key>
        </describedValue>
        <describedValue>
          <descriptions>
            <desc>Public</desc>
          </descriptions>
          <key>public</key>
        </describedValue>
      </enumeratedType>
      <required>true</required>
    </field>
    <field>
      <name>metadata.workload</name>
      <descriptions>
        <desc>Workload</desc>
      </descriptions>
      <help lang="en_US" href="@Help_import_image_workload@"/>
      <enumeratedType>
        <describedValue>
          <descriptions>
            <desc>Application Server</desc>
          </descriptions>
          <key>appserver</key>
        </describedValue>
        <describedValue>
          <descriptions>
            <desc>Database Server</desc>
          </descriptions>
          <key>dbserver</key>
        </describedValue>
        <describedValue>
          <descriptions>
            <desc>File Store</desc>
          </descriptions>
          <key>filestore</key>
        </describedValue>
        <describedValue>
          <descriptions>
            <desc>Middleware/Messaging</desc>
          </descriptions>
          <key>middleware</key>
        </describedValue>
        <describedValue>
          <descriptions>
            <desc>Web Server</desc>
          </descriptions>
          <key>webserver</key>
        </describedValue>
        <describedValue>
          <descriptions>
            <desc>Other</desc>
          </descriptions>
          <key>other</key>
        </describedValue>
      </enumeratedType>
      <required>true</required>
    </field>
    <field>
      <name>metadata.billing_code</name>
      <descriptions>
        <desc>Billing Code</desc>
      </descriptions>
      <help lang="en_US" href="@Help_import_image_billing_code@"/>
      <type>str</type>
      <default/>
    </field>
    <field>
      <name>metadata.department_code</name>
      <descriptions>
        <desc>Department Code</desc>
      </descriptions>
      <help lang="en_US" href="@Help_import_image_dept_code@"/>
      <type>str</type>
      <default/>
    </field>
    <field>
      <name>metadata.cost</name>
      <descriptions>
        <desc>Cost</desc>
      </descriptions>
      <help lang="en_US" href="@Help_import_image_cost@"/>
      <type>str</type>
      <default/>
    </field>
    <field>
      <name>metadata.credentials_username</name>
      <descriptions>
        <desc>User Name</desc>
      </descriptions>
      <help lang="en_US" href="@Help_import_image_metadata_credentials_username@"/>
      <type>str</type>
    </field>
    <field>
      <name>metadata.credentials_password</name>
      <descriptions>
        <desc>Password/Passphrase</desc>
      </descriptions>
      <help lang="en_US" href="@Help_import_image_metadata_credentials_password@"/>
      <type>str</type>
      <password>true</password>
    </field>
    <field> 
      <name>metadata.credentials_sshkey</name>
      <descriptions>
        <desc>Secure Shell (SSH) Key</desc>
      </descriptions> 
      <help lang="en_US" href="@Help_import_image_metadata_credentials_sshkey@"/>
      <type>str</type> 
      <constraints> 
        <descriptions> 
          <desc>The key must start with '-----BEGIN PRIVATE KEY-----', end with '----END PRIVATE KEY-----', and have a maximum length of 16384 characters.</desc> 
        </descriptions> 
        <regexp>^\s*-----BEGIN (\S+ )?PRIVATE KEY-----.*-----END (\S+ )?PRIVATE KEY-----\s*$</regexp> 
        <length>16384</length> 
      </constraints>
      <allowFileContent>true</allowFileContent> 
    </field>
  </dataFields>
</descriptor>
