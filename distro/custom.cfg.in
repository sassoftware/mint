[global]
plugins.disable = ['/configure/ConaryConf', '/services/Services']
product.productName="rBuilder Appliance"
product.productVersion="@VERSION@"

[/backup]
backup.local_storage="/srv/raa/backups/"
backup.tmp_dir="/srv/raa/tmp/"

[/logs]
logs.files = {'Appliance Logs': None, 'Conary': '/var/log/conary', 'Inbound Mirroring': '/srv/rbuilder/logs/mirror-inbound.log', 'Outbound Mirroring': '/srv/rbuilder/logs/mirror-outbound.log', 'Mirror Preloading': '/srv/rbuilder/logs/load-mirror.log', 'Package Indexer': '/srv/rbuilder/logs/package-index.log', 'External Package Indexer': '/srv/rbuilder/logs/package-index-external.log'}

logs.num_lines = 20

