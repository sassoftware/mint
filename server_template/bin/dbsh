#!/usr/bin/python
import sys
import os
from os.path import dirname
baseDir = dirname(dirname(os.path.realpath(__file__)))
sys.path.insert(0, baseDir + '/pythonpath')

from conary.dbstore import shell
from mint import config

cfg = config.MintConfig()
cfg.read(baseDir + '/config/rbuilder.conf')
domain = cfg.siteDomainName.split(':')[0].replace('.', '_').replace('-', '_')
dbname = sys.argv[1]
sh = shell.DbShell(driver=cfg.reposDBDriver, 
                   path=cfg.reposDBPath % '%s_%s' % (dbname, domain))
sh.cmdloop()
