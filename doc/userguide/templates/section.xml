<?xml version="1.0" encoding="US-ASCII"?>
<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">

<xsl:import href="http://docbook.sourceforge.net/release/xsl/current/xhtml/docbook.xsl" />

<xsl:output method="xml" encoding="UTF-8" indent="yes"/>

<xsl:template match="*" mode="process.root">
    <xsl:variable name="doc" select="self::*"/>

    <xsl:call-template name="root.messages"/>

    <xsl:processing-instruction name="python">import raa.templates.helpsection</xsl:processing-instruction>
    <html xmlns="http://www.w3.org/1999/xhtml"
        xmlns:py="http://purl.org/kid/ns#" py:layout="raa.templates.helpsection">

    <div>
        <xsl:attribute name="py:match">item.tag == '{http://www.w3.org/1999/xhtml}content'</xsl:attribute>

        <xsl:call-template name="body.attributes"/>
        <xsl:call-template name="user.header.content">
            <xsl:with-param name="node" select="$doc"/>
        </xsl:call-template>
        <xsl:apply-templates select="."/>
        <xsl:call-template name="user.footer.content">
            <xsl:with-param name="node" select="$doc"/>
        </xsl:call-template>
    </div>

    </html>

</xsl:template>

</xsl:stylesheet>
